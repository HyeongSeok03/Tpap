<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="@color/white" /> <!-- 원하는 색상으로 변경 -->

    <!-- 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#F0F0F0" /> <!-- 테두리 색상 -->

    <!-- 모서리 둥글기 -->
    <corners android:radius="12dp" /> <!-- 원하는 반경값으로 변경 -->

    <!-- 패딩 (선택) -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />
</shape>